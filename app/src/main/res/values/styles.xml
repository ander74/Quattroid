<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <!-- EDIT TEXT -->
    <style name="edit_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:selectAllOnFocus">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/fondo_edittext2</item>
    </style>

    <!-- EDIT TEXT MULTILINEA -->
    <style name="edit_text_multilinea" parent="edit_text">
        <item name="android:gravity">top|left</item>
        <item name="android:padding">8dp</item>
        <item name="android:selectAllOnFocus">false</item>
        <item name="android:inputType">textMultiLine|textCapSentences</item>
        <item name="android:maxLines">1000</item>
    </style>

    <!-- TEXT VIEW -->
    <style name="text_view">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#000000</item>
    </style>

    <!-- BLOQUE HORIZONTAL -->
    <style name="horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!-- BLOQUE VERTICAL -->
    <style name="vertical">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!-- ICONO -->
    <style name="icono">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">4dp</item>
        <item name="android:maxHeight">25dp</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <!-- CONFIGURACION -->
    <style name="op_ly">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:background">#FF000000</item>
    </style>

    <style name="op_encabezado">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">4dp</item>
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="op_rl">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#FF181818</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="op_titulo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="op_descripcion" parent="op_titulo">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="op_edit">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">5dp</item>
        <item name="android:selectAllOnFocus">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:background">@drawable/fondo_edit_opcion2</item>
    </style>

    <style name="op_separador">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">#FFFFFFFF</item>
    </style>

    <style name="op_sep_verde" parent="op_separador">
        <item name="android:background">#FF00AA00</item>
    </style>

    <!-- ESTADISTICAS -->

    <style name="linea_estadisticas">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">4dp</item>
        <item name="android:weightSum">7</item>
        <item name="android:background">@drawable/fondo_transparente_b</item>
    </style>

    <style name="linea_estadisticas_i">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">4dp</item>
        <item name="android:weightSum">12</item>
        <item name="android:background">@drawable/fondo_estadisticas_i</item>
    </style>

    <style name="estadistica">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">9</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="valor">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">3</item>
        <item name="android:textSize">16sp</item>
    </style>


    <!-- ===================== -->
    <!--  ESTILOS MODO BÁSICO  -->
    <!-- ===================== -->

    <!-- TEXT VIEW BASICO -->
    <style name="text_view_basico">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#000000</item>
    </style>


    <!-- EDIT TEXT BASICO -->
    <style name="edit_text_basico">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:selectAllOnFocus">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">text</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@drawable/fondo_edittext2</item>
    </style>


    <!-- EDIT TEXT MULTILINEA -->
    <style name="edit_text_multilinea_basico" parent="edit_text_basico">
        <item name="android:gravity">top|left</item>
        <item name="android:padding">8dp</item>
        <item name="android:selectAllOnFocus">false</item>
        <item name="android:inputType">textMultiLine|textCapSentences</item>
        <item name="android:textSize">18sp</item>
        <item name="android:maxLines">1000</item>
    </style>


</resources>