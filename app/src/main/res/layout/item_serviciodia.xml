<LinearLayout
    style="@style/vertical">

    <LinearLayout
    android:id="@+id/ly_cabecera"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:background="#ffff9300"
    android:orientation="horizontal">

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginRight="-1dp"
        android:layout_marginBottom="-1dp"
        android:gravity="center_horizontal"
        android:paddingRight="12dp"
        android:paddingLeft="12dp"
        android:paddingBottom="4dp"
        android:paddingTop="4dp"
        android:background="@drawable/fondo_transparente_b"
        android:textSize="14sp"
        android:text="SERV"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginRight="-1dp"
        android:layout_marginBottom="-1dp"
        android:gravity="center_horizontal"
        android:paddingRight="12dp"
        android:paddingLeft="12dp"
        android:paddingBottom="4dp"
        android:paddingTop="4dp"
        android:background="@drawable/fondo_transparente_b"
        android:textSize="14sp"
        android:text="TUR"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginRight="-1dp"
        android:layout_marginBottom="-1dp"
        android:gravity="center_horizontal"
        android:paddingRight="12dp"
        android:paddingLeft="12dp"
        android:paddingBottom="4dp"
        android:paddingTop="4dp"
        android:background="@drawable/fondo_transparente_b"
        android:textSize="14sp"
        android:text="LINEA"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginRight="-1dp"
        android:layout_marginBottom="-1dp"
        android:gravity="center_horizontal"
        android:paddingRight="12dp"
        android:paddingLeft="12dp"
        android:paddingBottom="4dp"
        android:paddingTop="4dp"
        android:background="@drawable/fondo_transparente_b"
        android:textSize="14sp"
        android:text="INI"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginBottom="-1dp"
        android:gravity="center_horizontal"
        android:paddingRight="12dp"
        android:paddingLeft="12dp"
        android:paddingBottom="4dp"
        android:paddingTop="4dp"
        android:background="@drawable/fondo_transparente_b"
        android:textSize="14sp"
        android:text="FIN"/>
</LinearLayout>

    <LinearLayout
        android:id="@+id/ly_item"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/fondo_serviciosdia_i"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_servicio"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="-1dp"
            android:gravity="center_horizontal"
            android:paddingRight="12dp"
            android:paddingLeft="12dp"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:background="@drawable/fondo_transparente_b"
            android:textSize="14sp"
            android:text="91"/>
        <TextView
            android:id="@+id/tv_turno"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="-1dp"
            android:gravity="center_horizontal"
            android:paddingRight="12dp"
            android:paddingLeft="12dp"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:background="@drawable/fondo_transparente_b"
            android:textSize="14sp"
            android:text="1"/>
        <TextView
            android:id="@+id/tv_linea"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="-1dp"
            android:gravity="center_horizontal"
            android:paddingRight="12dp"
            android:paddingLeft="12dp"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:background="@drawable/fondo_transparente_b"
            android:textSize="14sp"
            android:text="2322"/>
        <TextView
            android:id="@+id/tv_inicio"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="-1dp"
            android:gravity="center_horizontal"
            android:paddingRight="12dp"
            android:paddingLeft="12dp"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:background="@drawable/fondo_transparente_b"
            android:textSize="14sp"
            android:text="08:00"/>
        <TextView
            android:id="@+id/tv_final"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:paddingRight="12dp"
            android:paddingLeft="12dp"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:background="@drawable/fondo_transparente_b"
            android:textSize="14sp"
            android:text="09:10"/>
    </LinearLayout>

</LinearLayout>