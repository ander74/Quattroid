<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="#000000">

    <ListView
        android:id="@+id/lw_ajenas"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:background="#ffeeeeee" />

    <Button
        android:id="@+id/bt_addHoraAjena"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/fondo_boton_redondo_add"
        android:textColor="#FF000099"
        android:textStyle="bold"
        android:elevation="5dp"
        android:textSize="36sp" />

    <Button
        android:id="@+id/bt_borrarHoraAjena"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/fondo_boton_redondo_borrar"
        android:visibility="gone"
        android:elevation="5dp" />

</RelativeLayout>