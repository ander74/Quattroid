<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="HardcodedText,KeyboardInaccessibleWidget,UseCompoundDrawables,RtlSymmetry"
    android:background="#FF000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_gravity="center"
        android:background="#000000">

        <!-- TITULO -->
        <LinearLayout
            android:id="@+id/titulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="40dp"
            android:longClickable="true"
            android:gravity="center_horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="72dp"
                android:adjustViewBounds="true"
                android:contentDescription="Herramientas"
                android:src="@drawable/herramientas"
                tools:ignore="HardcodedText" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ffdcdcdc"
                android:textStyle="bold"
                android:text="@string/bt_herramientas" />

        </LinearLayout>

        <!-- ESTADISTICAS -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal"
            android:padding="10dp"
            android:clickable="true"
            android:longClickable="true"
            android:layout_marginBottom="10dp"
            android:background="@drawable/bt_busquedas"
            android:onClick="BotonPulsado"
            android:id="@+id/bt_estadisticas">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:adjustViewBounds="true"
                android:contentDescription="Estadísticas"
                android:src="@drawable/graficobarras" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffdddd00"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/bt_estadisticas"
                android:paddingStart="25dp" />
        </LinearLayout>

        <!-- BUSQUEDAS -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal"
            android:padding="10dp"
            android:clickable="true"
            android:longClickable="true"
            android:layout_marginBottom="10dp"
            android:background="@drawable/bt_calendario"
            android:onClick="BotonPulsado"
            android:id="@+id/bt_busquedas">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:adjustViewBounds="true"
                android:contentDescription="Búsquedas"
                android:src="@drawable/busquedas" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/bt_busquedas"
                android:textColor="#ff00aa00"
                android:paddingStart="25dp" />

        </LinearLayout>

        <!-- INCIDENCIAS -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal"
            android:padding="10dp"
            android:clickable="true"
            android:longClickable="true"
            android:layout_marginBottom="10dp"
            android:background="@drawable/bt_ajenas"
            android:onClick="BotonPulsado"
            android:id="@+id/bt_incidencias">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:adjustViewBounds="true"
                android:contentDescription="Incidencias"
                android:src="@drawable/incidencias" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffaa00aa"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/bt_incidencias"
                android:paddingStart="25dp" />

        </LinearLayout>

        <!-- COPIA DE SEGURIDAD -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal"
            android:padding="10dp"
            android:clickable="true"
            android:longClickable="true"
            android:layout_marginBottom="10dp"
            android:background="@drawable/bt_relevos"
            android:onClick="BotonPulsado"
            android:id="@+id/bt_copiaSeguridad">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:adjustViewBounds="true"
                android:contentDescription="Copia de seguridad"
                android:src="@drawable/guardar" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/bt_copiaSeguridad"
                android:textColor="#ffff6600"
                android:paddingStart="25dp" />

        </LinearLayout>

        <!-- DROPBOX -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal"
            android:padding="10dp"
            android:clickable="true"
            android:longClickable="true"
            android:layout_marginBottom="10dp"
            android:background="@drawable/bt_dropbox"
            android:onClick="BotonPulsado"
            android:id="@+id/bt_dropBox">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:adjustViewBounds="true"
                android:contentDescription="Dropbox"
                android:src="@drawable/dropbox" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#03A9F4"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/bt_dropbox"
                android:paddingStart="25dp" />

        </LinearLayout>

        <!-- AJUSTES -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal"
            android:padding="10dp"
            android:clickable="true"
            android:longClickable="true"
            android:layout_marginBottom="10dp"
            android:background="@drawable/bt_ajustes"
            android:onClick="BotonPulsado"
            android:id="@+id/bt_ajustes">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:adjustViewBounds="true"
                android:contentDescription="Ajustes"
                android:src="@drawable/ajustes" />

            <TextView
                android:layout_width="wrap_content"
                android:textColor="#ff909090"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/bt_ajustes"
                android:paddingStart="25dp" />
        </LinearLayout>


    </LinearLayout>
</ScrollView>