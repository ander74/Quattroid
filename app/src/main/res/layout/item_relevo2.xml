<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- Principal -->
    <LinearLayout
        android:id="@+id/item"
        android:background="@drawable/fondo_relevo_impar"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Matrícula -->
        <TextView
            android:id="@+id/tv_matricula"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center|center_vertical"
            android:background="@android:color/transparent"
            android:padding="4dp"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Contenido del relevo -->
        <LinearLayout
            android:orientation="vertical"
            android:padding="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Línea uno -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_gravity="top"
                android:layout_marginTop="2dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_nombre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@android:color/transparent"
                    android:layout_marginEnd="5dp"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_apellidos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@android:color/transparent"
                    android:textSize="16sp" />

            </LinearLayout>

            <!-- Línea dos -->
            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_marginBottom="2dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/im_calificacion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:adjustViewBounds="true"
                    android:maxHeight="16dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginEnd="15dp"
                    android:src="@drawable/icono_buen_relevo" />

                <TextView
                    android:id="@+id/tv_deuda"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/im_calificacion"
                    android:background="@android:color/transparent"
                    android:textSize="16sp" />

            </RelativeLayout>


        </LinearLayout>


    </LinearLayout>


    <!-- Separador -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="#FFDDDDDD"
        android:layout_height="1dp"/>


</LinearLayout>