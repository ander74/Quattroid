<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@android:color/transparent">

    <LinearLayout
        android:id="@+id/barraInferior"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:background="@drawable/fondo_barra_inferior"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:elevation="5dp">

        <Button
            android:id="@+id/bt_barra_addRelevo"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/icono_sumar"
            android:layout_marginVertical="5dp"
            android:background="@drawable/fondo_boton_barra_inferior"
            android:paddingVertical="10dp"
            android:drawablePadding="5dp"
            android:drawableTint="#FF000099"
            android:text="Nuevo"
            android:textColor="#FF000099"
            android:textSize="10dp" />

        <Button
            android:id="@+id/bt_barra_borrar_relevo"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/icono_boton_vaciar"
            android:layout_marginVertical="5dp"
            android:background="@drawable/fondo_boton_barra_inferior"
            android:paddingVertical="10dp"
            android:drawablePadding="5dp"
            android:drawableTint="#FF909090"
            android:text="Borrar"
            android:enabled="false"
            android:textColor="#FF909090"
            android:textSize="10dp" />

        <Button
            android:id="@+id/bt_barra_relevo_fijo"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/icono_relevo_fijo"
            android:layout_marginVertical="5dp"
            android:background="@drawable/fondo_boton_barra_inferior"
            android:paddingVertical="10dp"
            android:drawablePadding="5dp"
            android:drawableTint="#FF909090"
            android:text="Rel. fijo"
            android:enabled="false"
            android:textColor="#FF909090"
            android:textSize="10dp" />

        <Button
            android:id="@+id/bt_barra_ordenar"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/icono_ordenar"
            android:layout_marginVertical="5dp"
            android:background="@drawable/fondo_boton_barra_inferior"
            android:paddingVertical="10dp"
            android:drawablePadding="5dp"
            android:drawableTint="#FF000099"
            android:text="Matrícula"
            android:textColor="#FF000099"
            android:textSize="10dp" />

        <Button
            android:id="@+id/bt_barra_llamar"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/icono_llamar_telefono"
            android:layout_marginVertical="5dp"
            android:background="@drawable/fondo_boton_barra_inferior"
            android:paddingVertical="10dp"
            android:drawablePadding="5dp"
            android:drawableTint="#FF909090"
            android:text="Llamar"
            android:textColor="#FF909090"
            android:enabled="false"
            android:textSize="10dp" />

    </LinearLayout>

    <ListView
        android:id="@+id/lw_relevos"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:paddingBottom="120dp"
        android:clipToPadding="false"
        android:background="#ffeeeeee" />

</RelativeLayout>